<h1>Edit review</h1>

<%= form_for([@post, @review]) do |f| %>
  <div id="rating-form">
		<label>Rating</label>
	</div>
  <%= f.text_field :comment %>
  <%= f.submit "Edit", disable_with: 'Editing...' %>
<% end %>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>